  "dependencies": {
    "@joelalejandro/jsonapi-ts": "joelalejandro/jsonapi-ts",
    "@koa/cors": "^2.2.3",
    "knex": "^0.16.3",
    "koa": "^2.7.0",
    "koa-bodyparser": "^4.2.1",
    "logepi": "^1.0.5",
    "mercadopago": "^1.0.22",
    "pg": "^7.9.0",
    "ts-node-dev": "^1.0.0-pre.32",
    "uuid": "^3.3.2"
